<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_marginTop="20px"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/fundo_logo"
            android:contentDescription="Logo Segurança do Trabalho"
            android:layout_marginBottom="24dp" />

        <!-- Campo RF -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RF"
            android:textColor="#007F30"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editRf"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:hint="Digite o RF"
            android:textColorHint="#444" />

        <!-- Campo Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="#007F30"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editNome"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#444"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:hint="Digite o nome" />

        <!-- Campo Setor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setor"
            android:textColor="#007F30"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editSetor"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#444"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:hint="Digite o setor" />

        <!-- Campo Cargo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargo"
            android:textColor="#007F30"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            />

        <EditText
            android:id="@+id/editCargo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColorHint="#444"
            android:layout_marginTop="20px"
            android:hint="Digite o cargo" />

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="Cadastrar"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            android:paddingLeft="24dp"
            android:textStyle="bold"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/textTenhoAcesso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="12dp"
            android:text="Já tenho acesso"
            android:textColor="#1E88E5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:autoLink="none"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
